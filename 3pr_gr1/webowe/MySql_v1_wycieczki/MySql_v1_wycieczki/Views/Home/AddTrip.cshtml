<form asp-action="AddTrip" method="post">
    <div class="row">
        <label asp-for="Place" class="col-3 text-end"></label>
        <input asp-for="Place" class="col-3"/>
        <span class="error" asp-validation-for="Place"></span>
    </div>
    <div class="row">
        <label asp-for="Price" class="col-3 text-end"></label>
        <input asp-for="Price" class="col-3" />
